{
  "name": "@ue-bot/bridge-service",
  "version": "0.1.0",
  "private": true,
  "description": "Bridge service connecting ESP32 devices with Moltbot Gateway",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "start": "node dist/index.js",
    "lint": "eslint src --ignore-pattern '**/*.test.ts'",
    "lint:fix": "eslint src --ignore-pattern '**/*.test.ts' --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@ue-bot/shared": "workspace:*",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "helmet": "^7.1.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "uuid": "^9.0.0",
    "ws": "^8.17.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "rimraf": "^6.1.3",
    "tsup": "^8.0.0",
    "tsx": "^4.11.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
