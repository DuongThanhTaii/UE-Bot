{
  "name": "@ue-bot/bridge-service",
  "version": "0.1.0",
  "private": true,
  "description": "Express + WebSocket bridge service for UE-Bot",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.15.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "axios": "^1.6.2",
    "@ue-bot/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "typescript": "^5.5.0",
    "tsx": "^4.7.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "prettier": "^3.2.0",
    "vitest": "^1.1.1",
    "rimraf": "^5.0.0"
  }
}
