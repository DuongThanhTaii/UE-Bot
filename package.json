{
  "name": "ue-bot",
  "version": "0.1.0",
  "private": true,
  "description": "Universal ESP32 Bot - Moltbot clone with voice control",
  "author": "DuongThanhTai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DuongThanhTaii/UE-Bot.git"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:webapp": "pnpm --filter @ue-bot/webapp dev",
    "dev:bridge": "pnpm --filter @ue-bot/bridge-service dev",
    "build": "pnpm -r --filter \"!@ue-bot/esp32-firmware\" build",
    "build:all": "pnpm -r build",
    "build:webapp": "pnpm --filter @ue-bot/webapp build",
    "build:bridge": "pnpm --filter @ue-bot/bridge-service build",
    "test": "pnpm --filter @ue-bot/agent-core --filter @ue-bot/cli --filter @ue-bot/bridge-service test",
    "test:all": "pnpm -r --filter \"!@ue-bot/esp32-firmware\" test",
    "test:e2e": "pnpm -r test:e2e",
    "lint": "pnpm -r --filter \"!@ue-bot/esp32-firmware\" lint",
    "lint:fix": "pnpm -r --filter \"!@ue-bot/esp32-firmware\" lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm -r --filter \"!@ue-bot/esp32-firmware\" typecheck",
    "clean": "pnpm -r clean && rimraf node_modules",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{js,jsx,json,md}": ["prettier --write"]
  }
}
